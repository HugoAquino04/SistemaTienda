@model IEnumerable<SistemaTienda.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Menu de Producto</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @Class = "btn btn-primary" })
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnidadMedidaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioCompra)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnidadMedidaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCreacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioCompra)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ProductoId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Detalles", "Details", new { id = item.ProductoId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ProductoId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
