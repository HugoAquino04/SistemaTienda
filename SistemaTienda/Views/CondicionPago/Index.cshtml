@model IEnumerable<SistemaTienda.Models.CondicionPago>

@{
    ViewBag.Title = "Index";
}

<h2>Menu de Condicion de Pago</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @Class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCreacion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CondicionPagoId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Detalles", "Details", new { id = item.CondicionPagoId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.CondicionPagoId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
